<div class="forms">
  <form class="login-form">
    <h2>Login!</h2>
    <div class="form-group">
      <label for="email-login">email:</label>
      <input type="text" id="email-login" class="form-control" />
    </div>
    <div class="form-group">
      <label for="password-login">password:</label>
      <input type="password" id="password-login" class="form-control" />
    </div>
    <div>
      <button type="submit" class="btn btn-primary">login</button>
    </div>
  </form>

  <form class="signup-form">
    <h2>Sign Up!</h2>
    <div class="form-group">
      <label for="username-signup">username:</label>
      <input type="text" class="form-control" id="username-signup" />
    </div>
    <div class="form-group">
      <label for="email-signup">email:</label>
      <input type="email" id="email-signup" class="form-control" />
    </div>
    <div class="form-group">
      <label for="password-signup">password:</label>
      <input type="password" id="password-signup" class="form-control" />
    </div>
    <div class="form-group">
      <label for="username-twitter-signup">Twitter:</label>
      <input type="text" class="form-control" id="username-twitter-signup" />
    </div>
    <div class="form-group">
      <label for="username-github-signup">Github</label>
      <input type="text" class="form-control" id="username-github-signup" />
    </div>
    <div>
      <button type="submit" class="btn btn-primary">sign up</button>
    </div>
  </form>
</div>
<script src="/javascript/login.js"></script>