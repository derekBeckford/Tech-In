<article class="card">
  <div class="title">
    <a href="/post/{{id}}" class="card-body display-6 link-dark">{{title}}</a>
  </div>
  <div class="meta card-body">
    post by
    {{user.username}}
    <a
      href="https://twitter.com/{{user.twitter}}"
      target="_blank"
      class="fa fa-twitter link-dark"
    >{{user.twitter}}</a>
    <a
      href="https://github.com/{{user.github}}/"
      target="_blank"
      aria-hidden="true"
      class="link-dark fa fa-github"
    >{{user.github}}</a>
    on
    {{format_date created_at}}
    |
    <a href="/post/{{id}}" class="link-dark">{{comments.length}}
      {{format_plural "comment" comments.length}}</a>
  </div>
  <div class="post-content">
    {{post_content}}
  </div>
</article>